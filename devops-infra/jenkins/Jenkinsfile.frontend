
# Jenkinsfile.frontend
pipeline {
    agent { label 'docker' }
    stages {
        stage('Build') {
            steps {
                sh 'npm install && npm run build'
            }
        }
        stage('Docker Build & Push') {
            steps {
                sh 'docker build -t $REGISTRY/frontend:$BUILD_NUMBER .'
                sh 'docker push $REGISTRY/frontend:$BUILD_NUMBER'
            }
        }
    }
}
